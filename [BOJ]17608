/*
바라보는 방향이 왼쪽이므로, n--해주면서 검사하기
*/

#include<iostream>
#define MAX 100000
using namespace std;

int n, arr[MAX];

void input(){
	cin >> n;
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
}

void solution() {
	int max = 0;
	int answer = 0;
	for (int i = n - 1; i >= 0; i--) {
		if (max < arr[i]) {
			max = arr[i];
			answer++;
		}
	}

	cout << answer;
}

int main() {
	input();
	solution();
}
